<%- include('../partials/header', { title: title, user: null }) %>

<div class="container">
    <div class="form-container">
        <h2 style="text-align: center; margin-bottom: 2rem;" class="rainbow-text">
            <i class="fas fa-user-plus"></i> ğŸŠ Create Your Amazing Account! âœ¨
        </h2>

        <% if (errors.length > 0) { %>
            <div class="alert alert-danger">
                <% errors.forEach(error => { %>
                    <p><i class="fas fa-exclamation-circle"></i> âš ï¸ <%= error.msg %></p>
                <% }) %>
            </div>
        <% } %>

        <form action="/auth/register" method="POST">
            <div class="form-group">
                <label for="name"><i class="fas fa-user"></i> ğŸ‘¤ Full Name</label>
                <input type="text" id="name" name="name" class="form-control" 
                       value="<%= formData.name || '' %>" placeholder="Enter your full name" required>
            </div>

            <div class="form-group">
                <label for="email"><i class="fas fa-envelope"></i> ğŸ“§ Email Address</label>
                <input type="email" id="email" name="email" class="form-control" 
                       value="<%= formData.email || '' %>" placeholder="Enter your email address" required>
            </div>

            <div class="form-group">
                <label for="password"><i class="fas fa-lock"></i> ğŸ” Password</label>
                <input type="password" id="password" name="password" class="form-control" 
                       placeholder="Create a strong password (min 6 characters)" required>
            </div>

            <div class="form-group">
                <label for="role"><i class="fas fa-user-tag"></i> ğŸ¯ I am a</label>
                <select id="role" name="role" class="form-control" required onchange="toggleCompanyFields()">
                    <option value="">ğŸ¤” Select your role</option>
                    <option value="jobseeker" <%= formData.role === 'jobseeker' ? 'selected' : '' %>>ğŸ‘¤ Job Seeker</option>
                    <option value="company" <%= formData.role === 'company' ? 'selected' : '' %>>ğŸ¢ Company/Employer</option>
                </select>
            </div>

            <div id="companyFields" style="display: none;">
                <div class="form-group">
                    <label for="company_name"><i class="fas fa-building"></i> ğŸ¢ Company Name</label>
                    <input type="text" id="company_name" name="company_name" class="form-control" 
                           value="<%= formData.company_name || '' %>" placeholder="Enter your company name">
                </div>

                <div class="form-group">
                    <label for="company_description"><i class="fas fa-info-circle"></i> ğŸ“ Company Description</label>
                    <textarea id="company_description" name="company_description" class="form-control" 
                              rows="3" placeholder="Tell us about your company..."><%= formData.company_description || '' %></textarea>
                </div>
            </div>

            <div class="form-group">
                <label for="phone"><i class="fas fa-phone"></i> ğŸ“± Phone Number (Optional)</label>
                <input type="tel" id="phone" name="phone" class="form-control" 
                       value="<%= formData.phone || '' %>" placeholder="Enter your phone number">
            </div>

            <div class="form-group">
                <label for="address"><i class="fas fa-map-marker-alt"></i> ğŸ“ Address (Optional)</label>
                <textarea id="address" name="address" class="form-control" 
                          rows="2" placeholder="Enter your address"><%= formData.address || '' %></textarea>
            </div>

            <button type="submit" class="btn btn-primary pulse" style="width: 100%;">
                <i class="fas fa-user-plus"></i> ğŸš€ Create Account & Join Us
            </button>
        </form>

        <div style="text-align: center; margin-top: 2rem;">
            <p>Already have an account? <a href="/auth/login" style="color: #667eea; font-weight: bold;">ğŸ”‘ Login here!</a></p>
        </div>
    </div>
</div>

<script>
function toggleCompanyFields() {
    const role = document.getElementById('role').value;
    const companyFields = document.getElementById('companyFields');
    
    if (role === 'company') {
        companyFields.style.display = 'block';
        companyFields.style.animation = 'fadeIn 0.5s ease';
        document.getElementById('company_name').required = true;
    } else {
        companyFields.style.display = 'none';
        document.getElementById('company_name').required = false;
    }
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    toggleCompanyFields();
});
</script>

<%- include('../partials/footer') %>
