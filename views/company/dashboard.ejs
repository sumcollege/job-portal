                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Application View Modal -->
<div id="applicationModal" class="modal">
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">ğŸ“„ Application Details</h3>
            <button class="modal-close" onclick="closeApplicationModal()">&times;</button>
        </div>
        <div id="modalContent">
            <!-- Content will be populated by JavaScript -->
        </div>
    </div>
</div>

<script>
function viewApplication(id, applicantName, jobTitle, coverLetter, currentStatus) {
    document.getElementById('modalTitle').textContent = `ğŸ“„ Application from ${applicantName}`;
    
    const statusOptions = ['pending', 'reviewed', 'shortlisted', 'interviewed', 'accepted', 'rejected'];
    const statusSelect = statusOptions.map(status => 
        `<option value="${status}" ${status === currentStatus ? 'selected' : ''}>${status}</option>`
    ).join('');
    
    document.getElementById('modalContent').innerHTML = `
        <div style="margin-bottom: 1rem;">
            <strong>ğŸ’¼ Job:</strong> ${jobTitle}
        </div>
        <div style="margin-bottom: 1rem;">
            <strong>ğŸ‘¤ Applicant:</strong> ${applicantName}
        </div>
        <div style="margin-bottom: 1rem;">
            <strong>ğŸ“ Cover Letter:</strong>
            <div style="background: linear-gradient(135deg, rgba(116, 185, 255, 0.05), rgba(9, 132, 227, 0.05)); padding: 1rem; border-radius: 12px; margin-top: 0.5rem; border-left: 4px solid #74b9ff;">
                ${coverLetter.replace(/\n/g, '<br>')}
            </div>
        </div>
        <div style="margin-bottom: 1rem;">
            <label for="statusSelect"><strong>ğŸ“Š Status:</strong></label>
            <select id="statusSelect" class="form-control" style="margin-top: 0.5rem;">
                ${statusSelect}
            </select>
        </div>
        <div style="display: flex; gap: 1rem;">
            <button onclick="updateApplicationStatus(${id})" class="btn btn-primary">
                <i class="fas fa-save"></i> ğŸ’¾ Update Status
            </button>
            <button onclick="closeApplicationModal()" class="btn btn-secondary">
                âŒ Close
            </button>
        </div>
    `;
    
    document.getElementById('applicationModal').classList.add('show');
}

function closeApplicationModal() {
    document.getElementById('applicationModal').classList.remove('show');
}

async function updateApplicationStatus(applicationId) {
    const status = document.getElementById('statusSelect').value;
    
    try {
        const response = await fetch(`/applications/${applicationId}/status`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert('ğŸ‰ Application status updated successfully!');
            location.reload();
        } else {
            alert('âŒ Failed to update status');
        }
    } catch (error) {
        alert('âŒ Failed to update status');
    }
}
</script>

