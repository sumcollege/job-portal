            <div class="card-header">
                <h2 class="card-title"><i class="fas fa-file-alt"></i> ğŸ“„ Recent Applications</h2>
            </div>

            <% if (applications.length === 0) { %>
                <p style="text-align: center; color: #666; padding: 2rem;">
                    ğŸ“­ No applications received yet. Post more jobs to attract candidates! ğŸš€
                </p>
            <% } else { %>
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ğŸ‘¤ Applicant</th>
                                <th>ğŸ’¼ Job</th>
                                <th>ğŸ“Š Status</th>
                                <th>ğŸ“… Applied</th>
                                <th>âš¡ Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% applications.slice(0, 10).forEach(application => { %>
                                <tr>
                                    <td>
                                        <strong><%= application.jobseeker_name %></strong><br>
                                        <small>ğŸ“§ <%= application.jobseeker_email %></small>
                                    </td>
                                    <td>ğŸ’¼ <%= application.job_title %></td>
                                    <td>
                                        <span class="status-badge status-<%= application.status %>">
                                            <%= application.status %>
                                        </span>
                                    </td>
                                    <td>ğŸ“… <%= new Date(application.applied_at).toLocaleDateString() %></td>
                                    <td>
                                        <button onclick="viewApplication(<%= application.id %>, '<%= application.jobseeker_name.replace(/'/g, "\\'") %>', '<%= application.job_title.replace(/'/g, "\\'") %>', '<%= application.cover_letter.replace(/'/g, "\\'").replace(/\n/g, "\\n") %>', '<%= application.status %>')" 
                                                class="btn btn-primary" style="font-size: 0.8rem; padding: 0.3rem 0.8rem;">
                                            <i class="fas fa-eye"></i> ğŸ‘€ View
