        </div>
        <div class="stat-card">
            <div class="stat-number"><%= applications.length %></div>
            <div class="stat-label">ğŸ“„ Total Applications</div>
        </div>
        <div class="stat-card">
            <div class="stat-number"><%= applications.filter(app => app.status === 'pending').length %></div>
            <div class="stat-label">â³ Pending Reviews</div>
        </div>
    </div>

    <div class="grid grid-2">
        <!-- Jobs Section -->
        <div class="card">
            <div class="card-header">
                <h2 class="card-title"><i class="fas fa-briefcase"></i> ğŸ’¼ Your Jobs</h2>
                <a href="/company/jobs/create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> â• Post New Job
                </a>
            </div>

            <% if (jobs.length === 0) { %>
                <p style="text-align: center; color: #666; padding: 2rem;">
                    ğŸ“ No jobs posted yet. <a href="/company/jobs/create" style="color: #667eea; font-weight: bold;">Post your first job</a>! ğŸš€
                </p>
            <% } else { %>
                <% jobs.forEach(job => { %>
                    <div class="job-card">
                        <h4 class="job-title">ğŸ’¼ <%= job.title %></h4>
                        <div class="job-meta">
                            <span><i class="fas fa-map-marker-alt"></i> ğŸ“ <%= job.location %></span>
                            <span><i class="fas fa-briefcase"></i> â° <%= job.job_type.replace('-', ' ').toUpperCase() %></span>
                            <span><i class="fas fa-calendar"></i> ğŸ“… <%= new Date(job.created_at).toLocaleDateString() %></span>
                        </div>
                        <div style="display: flex; gap: 0.5rem; margin-top: 1rem; flex-wrap: wrap;">
                            <a href="/jobs/<%= job.id %>" class="btn btn-secondary" style="font-size: 0.9rem; padding: 0.5rem 1rem;">
                                <i class="fas fa-eye"></i> ğŸ‘€ View
